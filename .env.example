# MCP Server Configuration
MCP_SERVER_NAME="MCP Learning Server"
MCP_SERVER_VERSION="0.1.0"
MCP_SERVER_HOST="0.0.0.0"
MCP_SERVER_PORT="8000"

# Environment
ENVIRONMENT="development"  # development, production, testing
DEBUG="true"
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ALLOWED_HOSTS="localhost,127.0.0.1,0.0.0.0"

# File Operations Settings
MAX_FILE_SIZE_MB="10"
ALLOWED_FILE_EXTENSIONS=".txt,.json,.csv,.md,.py,.js,.html,.xml"
UPLOAD_DIR="./uploads"

# Web Scraping Settings
REQUEST_TIMEOUT="30"
MAX_CONCURRENT_REQUESTS="5"
USER_AGENT="MCP-Learning-Server/1.0"

# Database (if needed for future extensions)
# DATABASE_URL="sqlite:///./mcp_learn.db"

# External API Keys (example - add your own as needed)
# OPENAI_API_KEY="sk-..."
# ANTHROPIC_API_KEY="sk-ant-..."

# Monitoring and Logging
ENABLE_METRICS="true"
METRICS_PORT="9090"